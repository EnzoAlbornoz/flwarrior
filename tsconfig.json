{
    "compilerOptions": {
        "noEmit": true,
        "allowJs": true,
        "checkJs": true,
        "alwaysStrict": true,
        "isolatedModules": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "jsx": "react-jsx",
        "jsxImportSource": "react",
        "module": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "target": "ESNext"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
